#! /bin/bash

# Lib for CI scripts

set -e
set -o pipefail

# Travis uses a detached HEAD during builds
# CURRENT_BRANCH is used when updating Whitesource to determine the correct project name
export CURRENT_BRANCH=${TRAVIS_BRANCH}

runSbt() {
  sbt --warn 'set concurrentRestrictions in Global += Tags.limitAll(1)' "$@"
}

runSbtNoisy() {
  sbt 'set concurrentRestrictions in Global += Tags.limitAll(1)' "$@"
}

